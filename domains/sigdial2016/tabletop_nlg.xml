<?xml version="1.0" encoding="UTF-8"?>

<domain>
<model trigger="a_m,objects^t">

	<rule id="basicnlg">
		<case>
			<condition>
				<if var="a_m" value="Do(Move(Turn))" />
			</condition>
			<effect util="1">
				<set var="u_m" value="OK, now turning back" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Do(Move({X},Short))" />
			</condition>
			<effect util="1">
				<set var="u_m" value="OK, moving {X} a little bit" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Do(Move({X}))" />
				<if var="X" value="Short" relation="!contains" />
			</condition>
			<effect util="1">
				<set var="u_m" value="OK, moving {X}" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Do(PickUp(AtFeet))" />
			</condition>
			<effect util="1">
				<set var="u_m" value="OK, picking up the object at my feet" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Do(Release)" />
			</condition>
			<effect util="1">
				<set var="u_m" value="OK, putting down the object" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Do(Stop)" />
			</condition>
			<effect util="1">
				<set var="u_m" value="OK, stopping now" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Ask(Repeat)" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Sorry, could you repeat?" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Say(AlreadyCarryObject)" />
			</condition>
			<effect util="1">
				<set var="u_m"
					value="Sorry, I cannot do that, I am already carrying an object" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Say(DoNotCarryObject)" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Sorry, I cannot do that, I am not carrying the object" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Say(DoNotSeeObject)" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Sorry, I cannot do that, I do not see the object" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Say(CannotResolve)" />
			</condition>
			<effect util="1">
				<set var="u_m"
					value="Sorry, I don't know which object you are talking about" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Ask(Confirm(Move(Left)))" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Should I move left?" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Ask(Confirm(Move(Left,Short)))" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Should I move a bit to the left?" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Ask(Confirm(Move(Right)))" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Should I move right?" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Ask(Confirm(Move(Right,Short)))" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Should I move a bit to the right?" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Ask(Confirm(Move(Forward)))" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Should I move forward?" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Ask(Confirm(Move(Forward,Short)))" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Should I move a bit forward?" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Ask(Confirm(Move(Backward)))" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Should I move backward?" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Ask(Confirm(Move(Backward,Short)))" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Should I step a bit backward?" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Ask(Confirm(Move(Turn)))" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Should I turn 180 degrees?" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Ask(Confirm(Stop))" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Should I stop?" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Ask(Confirm(Release))" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Should I release the object?" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Ask(Confirm(PickUp(AtFeet)))" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Should I pick up the object at my feet?" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Say(Confirm)" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Yes" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Say(Disconfirm)" />
			</condition>
			<effect util="1">
				<set var="u_m" value="No" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Describe([])" />
			</condition>
			<effect util="1">
				<set var="u_m" value="I do not see anything" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Say(Greet)" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Hi there" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Say(Goodbye)" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Bye, see you next time" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Say(NameIsLenny)" />
			</condition>
			<effect util="1">
				<set var="u_m" value="My name is Lenny" />
			</effect>
		</case>
	</rule>
	
	<rule id="withgre">
		<case>
			<condition>
				<if var="a_m" value="Do(PickUp(obj_{ID}))" />
				<if var="obj_{ID}" relation="contains" value="[{ID} colour>{C} type>{T}]"/>
			</condition>
			<effect util="1">
				<set var="u_m" value="OK, picking up the {C} {T}" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Confirm(PickUp(obj_{ID}))" />
				<if var="obj_{ID}" relation="contains" value="[{ID} colour>{C} type>{T}]"/>
			</condition>
			<effect util="1">
				<set var="u_m" value="Should I pick up the {C} {T}?" />
			</effect>
		</case>
	</rule>

	<rule>
		<case>
			<condition>
				<if var="a_m" relation="=" value="Say(DescribeObjects)"/>
				<if var="objects^t" relation="=" value="None"/>			
				<if var="obj_{ID}" relation="contains" value="[{ID} colour>{C} type>{T}]"/>
			</condition>
			<effect prob="1">
				<set var="objects^t" value="a {C} {T}" exclusive="false"/>
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" relation="=" value="Say(DescribeObjects)"/>
				<if var="objects^t" relation="=" value="None"/>			
			</condition>
			<effect prob="1">
				<set var="objects^t" value="[]"/>
			</effect>
		</case>
	</rule>
	
	<rule>
		<case>
			<condition>
				<if var="a_m" relation="=" value="Say(DescribeObjects)"/>
				<if var="objects^t" relation="=" value="[]"/>
			</condition>
			<effect util="1">
				<set var="u_m" value="I do not see anything"/>
			</effect>
		</case>
		<case>
			<condition>
				<if var="objects^t" relation="=" value="[{X},{Y}]"/>
			</condition>
			<effect util="1">
				<set var="u_m" value="I see {X} and {Y}"/>
			</effect>
		</case>
		<case>
			<condition>
				<if var="objects^t" relation="=" value="[{X}]"/>
			</condition>
			<effect util="1">
				<set var="u_m" value="I see {X}"/>
			</effect>
		</case>
	</rule>
</model>


</domain>